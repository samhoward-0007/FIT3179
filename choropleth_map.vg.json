{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top Pollutes across Australia",
  "width": 600,
  "height": 600,
  "projection": {"type": "mercator"},
  "data": {
    "url": "aus_by_states.json",
    "format": {"type": "topojson", "feature": "SA1_2016_AUST"}
  },
  "transform": [
    {
      "lookup": "properties.STE_NAME16",
      "from": {
        "data": {
          "url": "map_data.csv",
          "format": {"type": "csv"}
        },
        "key": "State",
        "fields": ["Particulate Matter 2-5 um", "Oxides of Nitrogen", "Carbon monoxide"]
      },
      "as": ["pm_2_5", "Nitrogen_Oxides", "Carbon_monoxide"]
    },
    {
      "filter": "datum.pm_2_5 > 0 || datum.Nitrogen_Oxides > 0 || datum.Carbon_monoxide > 0"
    },
    {
      "calculate": "datum[selectedPollute]",
      "as": "pollution_level"
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field":  "pollution_level",
      "type": "quantitative",
      "scale": {"type": "log", "range": ["#ff0000", "#660000"]}
    },
    "tooltip": [
      {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
      {"field": "pollution_level", "type": "quantitative", "title": "Pollution Level"}
    ]
  },
  "params": [
        {
            "name": "selectedPollute",
            "value": "Particulate Matter 2-5 um"
        }
    ]
}